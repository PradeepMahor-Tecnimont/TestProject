    function showToastrMessage(pMsg) {
        if (pMsg) {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "200",
                "hideDuration": "500",
                "timeOut": "3000",
                "extendedTimeOut": "500",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
            toastr[pMsg.type](pMsg.message, pMsg.title);
            return pMsg;
        }
    }
    function notify(pMsgType, pMessage, pTitle) {
        var objMsg = {
            type: pMsgType,
            message: pMessage,
            title: pTitle.replace("danger", "Error")
        };
        showToastrMessage(objMsg);
        }
